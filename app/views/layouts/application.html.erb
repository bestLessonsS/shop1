<!DOCTYPE html>
<html>
<head>
  <title>Shop1</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	
	<!-- Fixed navbar -->
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <span class="navbar-brand">Shop</span>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li class="<%= current_page?(controller: 'products', action: 'index') ? "active" : "notactive" %>">
              <%= link_to "Products", products_path %>
            </li>
            <li class="<%= current_page?(controller: 'movies', action: 'new') ? "active" : "notactive" %>">
              <%= link_to "New movie", new_movie_path %>
            </li>
            <li class="<%= current_page?(controller: 'books', action: 'new') ? "active" : "notactive" %>">
              <%= link_to "New book", new_book_path %>
            </li>
            <li class="<%= current_page?(controller: 'customers', action: 'index') ? "active" : "notactive" %>">
              <%= link_to "Customers", customers_path %>
            </li>
            <li class="<%= current_page?(controller: 'customers', action: 'new') ? "active" : "notactive" %>">
              <%= link_to "New customer", new_customer_path %>
            </li>
            <li class="<%= current_page?(controller: 'orders', action: 'index') ? "active" : "notactive" %>">
              <%= link_to "Orders", orders_index_path %>
            </li>
          </ul>
          <%= form_tag({controller: 'products', action: 'index'}, {method: 'get', class: "navbar-form navbar-right"}) do %>
            <div class="form-group">
              <%= text_field_tag 'query', @query, placeholder: 'Search...', class: "form-control" %>
            </div>
            <%= submit_tag 'Submit', class: 'btn btn-default' %>
          <% end %>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

  <div class="container">
    <div class="row">
      <% if !flash[:notice].blank? %>
        <div class="bg-success col-md-12 alert-top-message">
          <%= flash[:notice] %>
        </div>
      <% end; %>

      <% if !flash[:alert].blank? %>
        <div class="bg-danger col-md-12 alert-top-message">
          <%= flash[:alert] %>
        </div>
      <% end; %>
    </div>
  </div>
  
<%= yield %>

</body>
</html>
