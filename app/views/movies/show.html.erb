<div class="container">
	<div class="row">
		<h1 class="col-md-12"><%= @product.name %></h1>
		<div class="col-md-4">
			<table class="table table-bordered">
				<tr>
					<td>Price</td>
					<td class="text-primary"><strong><%= @product.price %>$</strong></td>
				</tr>
				<tr>
					<td>Amount available</td>
					<td class="text-primary"><strong><%= @product.amountAvailable %></strong></td>
				</tr>
				<tr>
					<td>Genre</td>
					<td><%= @product.genre %></td>
				</tr>
				<tr>
					<td>Media</td>
					<td><%= @product.media %></td>
				</tr>
				<tr>
					<td>
						<%= link_to "Edit", edit_movie_path(@product), class: 'btn btn-primary btn-block' %>
					</td>
					<td>
						<%= link_to "Delete", @product, method: :delete, data: { confirm: "Delete product?" }, class: 'btn btn-danger btn-block' %>
					</td>
				</tr>
			</table>
		</div>
		<div class="col-md-12">
			<%= link_to "Return to all products", products_path, class: 'btn btn-default return-link' %>
		</div>
	</div>
</div>