<div class="container">
	<div class="row">
		<h1 class="col-md-12">Customers</h1>
		<table class="table table-striped table-hover">
			<thead>
				<tr>
					<th>Name</th>
					<th>Surname</th>
					<th>Street</th>
					<th>City</th>
					<th>Country</th>
					<th>ZIP code</th>
					<th>Show</th>
					<th>Edit</th>
					<th>Delete</th>
				</tr>
			</thead>
			<tbody>
				<% @customers.each do |c| %>
					<tr>
						<td><%= c.name %></td>
						<td><%= c.surname %></td>
						<td><%= c.street %></td>
						<td><%= c.city %></td>
						<td><%= c.country %></td>
						<td><%= c.zip_code %></td>
						<td><%= link_to 'View customer', c, class: 'btn btn-default' %></td>
						<td><%= link_to 'Edit customer', edit_customer_path(c), class: 'btn btn-default' %></td>
						<td><%= link_to 'Delete customer', c, method: :delete, data: { confirm: "Delete "+c.name+"?" }, class: 'btn btn-danger delete-product-btn' %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>