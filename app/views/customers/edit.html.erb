<div class="container">
	<div class="row">
		<h1 class="col-md-12">Edit customer</h1>
		<%= form_for @customer, html: {class: "col-md-4"} do |f| %>
			<div class="form-group">
				<label for="customerName">Name</label>
				<%= f.text_field :name, placeholder: "Enter name", id: 'customerName', class: 'form-control' %>
			</div>
			<div class="form-group">
				<label for="customerSurname">Surname</label>
				<%= f.text_field :surname, placeholder: "Enter surname", id: 'customerSurname', class: 'form-control' %>
			</div>
			<div class="form-group">
				<label for="customerStreet">Street</label>
				<%= f.text_field :street, placeholder: "Enter street", id: 'customerStreet', class: 'form-control' %>
			</div>
			<div class="form-group">
				<label for="customerCity">City</label>
				<%= f.text_field :city, placeholder: "Enter city", id: 'customerCity', class: 'form-control' %>
			</div>
			<div class="form-group">
				<label for="customerCountry">Country</label>
				<%= f.text_field :country, placeholder: "Enter country", id: 'customerCountry', class: 'form-control' %>
			</div>
			<div class="form-group">
				<label for="customerZIP">ZIP code</label>
				<%= f.text_field :zip_code, placeholder: "Enter ZIP code", id: 'customerZIP', class: 'form-control' %>
			</div>
			<%= f.submit "Save", class: "btn btn-primary btn-block" %>
		<% end %>
		<div class="col-md-12">
			<%= link_to "Return to customers", customers_path, class: 'btn btn-default return-link' %>
		</div>
	</div>
</div>